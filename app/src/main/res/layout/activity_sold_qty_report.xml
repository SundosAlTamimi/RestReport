<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FCFCFD"
    android:layout_height="match_parent"
    tools:context=".view.SoldQtyReport">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="6.77"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@color/blue2"
            android:textSize="12sp"
            android:gravity="center"

            android:layout_weight="1.3"
            android:text="@string/fromdate"/>


            <TextView
                android:id="@+id/fromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_stroke"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:gravity="center"
                app:drawableEndCompat="@drawable/ic_date_range_black_24dp" />


            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"

                android:layout_weight="1.3"
                android:text="@string/TOdate"/>


            <TextView
                android:id="@+id/todate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_stroke"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:gravity="center"
                app:drawableEndCompat="@drawable/ic_date_range_black_24dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="match_parent">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"

                android:layout_weight="1.5"
                android:text="@string/item_Name_"/>
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="2dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemname"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"

                android:layout_weight="1.5"
                android:text="@string/item_Code"/>
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="2dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemcode"
                     android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1.4"
                android:text="@string/POSNO"/>
            <LinearLayout


               android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/back_border"
                android:gravity="center"
                android:orientation="horizontal">

            <Spinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/PosNO"
                android:layout_height="match_parent"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="3dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Preivew"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/btn_bg"
                    android:drawableEnd="?android:attr/textCheckMark"
                    android:drawableTint="@color/black"
                    android:text="Show"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/group_lin"
            android:layout_height="match_parent">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"


                android:layout_weight="1"
                android:text="@string/Group"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/Group_Sp"
                android:layout_height="match_parent"/>



        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:backgroundTint="#31AFB4"
        android:visibility="gone"
        android:layout_weight="7.5"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/customer_textInput"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/basketListCard"
        android:layout_width="match_parent"
        android:layout_weight="2.9"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/customer_textInput"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarThumbHorizontal="@drawable/scrollbar_vertical_thumb"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="23dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/MODEL"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Group"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Kind"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/item_Code"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/item_Name_"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/QTY"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Hint"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />



                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Tax"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Service"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/ServiceTax"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/discount_"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/UnitPrice"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Gross"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />



                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Grossperc"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alegreya"
                        android:gravity="center"
                        android:lineHeight="19sp"
                        android:text="@string/Net"
                        android:textColor="@color/primarytextcolor"
                        android:textSize="14sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="11dp"
                    android:background="#31AFB445" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
        </HorizontalScrollView>


    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">
       <HorizontalScrollView
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:scrollbarThumbHorizontal="@drawable/scrollbar_vertical_thumb"
           android:fillViewport="true"
           android:layout_centerHorizontal="true"
           android:layout_marginHorizontal="26dp"
           android:layout_width="match_parent">
        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="26dp"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"


                android:layout_weight="1"
                android:text="@string/totalgross"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"

                android:text="0.0"
                android:layout_weight="1"
                android:id="@+id/totalgross"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"

                android:layout_weight="1"
                android:text="@string/totaldiscount"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"
                android:text="0.0"
                android:layout_weight="1"
                android:id="@+id/totaldiscount"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"

                android:layout_weight="1"
                android:text="@string/Totaltax"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"
                android:text="0.0"
                android:layout_weight="1"
                android:id="@+id/Totaltax"/>


        </TableRow>
       </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_weight="1" />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="@string/NetTotal"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="18sp"
                android:gravity="center"
android:text="0.0"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/NetTotal"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/blue2"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/POSNO_respon"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/soldQty_Respon"
                android:layout_height="match_parent"/>


        </TableRow>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>